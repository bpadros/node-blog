<!DOCTYPE html>
<html lang="en">
    <%-include('layouts/header.ejs');-%>
    <body>
        <!-- Navigation-->
        <%-include('layouts/navbar.ejs');-%>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('/../img/about-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <!-- <img src="../img/about-bg.jpg" alt=""> -->
                        <div class="page-heading">
                            <h1>New Post</h1>
                            <span class="subheading">Upload yor new post and share worldwide.</span>
                            
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <!-- <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p> -->
                            <form action="/posts/store" method="POST" enctype="multipart/form-data">
                                <div class="control-group">
                                    <div class="form-group floating-label-form-group controls">
                                      <label>Title</label>
                                      <input type="text" class="form-control" placeholder="Title" id="title" name="title">              
                                    </div>
                                  </div>
                                  <div class="control-group">
                                    <div class="form-group floating-label-form-group controls">
                                      <label>Description</label>
                                      <textarea rows="5" class="form-control" id="body" name="body"></textarea>
                                      <script>
                                        $('#body').summernote({
                                            placeholder:'Hello bootstrap 4',
                                            tabsize:2,
                                            height:200
                                        });
                                      </script>
                                </div>
                                </div>
                                <div class="control-group">
                                    <div class="form-group floating-label-form-group controls">
                                      <label>Image</label>
                                      <input type="file" class="form-control" id="image" name="image">              
                                    </div>
                                  </div>  
                                <br />
                                <div class="form-group">
                                <button class="btn btn-primary" id="sendMessageButton" type="submit">Send</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer-->
        
            <%-include('layouts/footer.ejs');-%>
            <!-- Bootstrap core JS-->
            <%-include('layouts/scripts.ejs');-%>
    </body>
</html>
